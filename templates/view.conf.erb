view:
  name: <%= @title %>
<%- if not @local_zone.nil? -%>
  <%- @local_zone.each do |k,v| -%>
  local-zone: <%= k %> <%= v %>
  <%- end -%>
<%- end -%>
<%- if not @local_data.nil? -%>
  <%- @local_data.each do |k| -%>
  local-data: "<%= k %>"
  <%- end -%>
<%- end -%>
<%- if not @stub_first.nil? -%>
  view-first: <%= scope.call_function('bool2str', [@stub_first, 'yes', 'no']) %>
<%- end -%>
