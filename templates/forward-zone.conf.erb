forward-zone:
  name: <%= @title %>
<%- if not @forward_host.nil? -%>
  <%- @forward_host.each do |v| -%>
  forward-host: <%= v %>
  <%- end -%>
<%- end -%>
<%- if not @forward_addr.nil? -%>
  <%- @forward_addr.each do |v| -%>
  forward-addr: <%= @forward_addr %>
  <%- end -%>
<%- end -%>
<%- if not @forward_first.nil? -%>
  forward-first: <%= scope.call_function('bool2str', [@forward_first, 'yes', 'no']) %>
<%- end -%>
<%- if not @forward_ssl_upstream.nil? -%>
  forward-ssl-upstream: <%= scope.call_function('bool2str', [@forward_ssl_upstream, 'yes', 'no']) %>
<%- end -%>
